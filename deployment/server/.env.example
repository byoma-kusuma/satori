# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=satori
DB_USER=postgres
DB_PASS=your-secure-password
DB_SSL_MODE=disable

# Database URL (used directly by application) - for self-contained setup
DATABASE_URL=postgresql://postgres:your-secure-password@db:5432/satori?sslmode=disable


# Application Configuration
NODE_ENV=production
PORT=3000
SERVER_URL=https://api.yourdomain.com
# Docker Port Configuration (Host:Container)
APP_HOST_PORT=3000
APP_CONTAINER_PORT=3000
DB_HOST_PORT=5433
DB_CONTAINER_PORT=5432
PGADMIN_HOST_PORT=5051
PGADMIN_CONTAINER_PORT=80

# Authentication Settings (Better Auth) - PRODUCTION VALUES
AUTH_HOST=api.yourdomain.com
AUTH_PORT=3000
BETTER_AUTH_URL=https://api.yourdomain.com
BETTER_AUTH_SECRET=generate-a-secure-random-secret-key-here

# Frontend Configuration
FRONTEND_HOST=yourdomain.com
FRONTEND_PORT=443
ORIGIN=https://yourdomain.com,https://api.yourdomain.com


## Email Configuration
# For production environments, use the following
EMAIL_SERVICE_PROVIDER=azure

# For dev Environments, use the following
# EMAIL_SERVICE_PROVIDER=gmail

# Azure Communication Services Configuration if using Azure
AZURE_COMMUNICATION_CONNECTION_STRING="endpoint=https://your-communication-service.communication.azure.com/;accesskey=your-access-key"
AZURE_COMMUNICATION_FROM_EMAIL="noreply@yourdomain.com"


EMAIL_FROM=no-reply@yourdomain.com
EMAIL_SERVER=smtp.your-mail-provider.com
EMAIL_PORT=587
EMAIL_USER=your-email-username
EMAIL_PASSWORD=your-email-password

# Gmail Configuration (if using Gmail)
GMAIL_USER=your-gmail@gmail.com
GMAIL_PASS=your-gmail-app-password

# Test Users
TEST_USERS=test1@yourdomain.com, test2@yourdomain.com, test3@yourdomain.com
TEST_ORG=yourdomain.com

# Docker Network Configuration
DOCKER_NETWORK=satori-app-network