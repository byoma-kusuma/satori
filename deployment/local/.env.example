# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=satori
DB_USER=postgres
DB_PASS=postgres
DB_SSL_MODE=disable

# Database URL (used directly by application) - for local development
DATABASE_URL=postgresql://postgres:postgres@db:5432/satori?sslmode=disable

# Application Configuration
NODE_ENV=development
PORT=3000
SERVER_URL=http://localhost:3000
APP_CONTAINER_PORT=3000

# Authentication Settings (Better Auth) - LOCAL DEVELOPMENT VALUES
AUTH_HOST=localhost
AUTH_PORT=3000
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=local-dev-secret-change-in-production

# Frontend Configuration
FRONTEND_HOST=localhost
FRONTEND_PORT=5173
ORIGIN=http://localhost:5173

# pgAdmin Configuration
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

## Email Configuration
# For local development, use Gmail or disable email features
EMAIL_SERVICE_PROVIDER=gmail

# Gmail Configuration (for local testing - use app password)
GMAIL_USER=your-gmail@gmail.com
GMAIL_PASS=your-gmail-app-password

# Email fallback configuration
EMAIL_FROM=no-reply@localhost
EMAIL_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# Azure Communication Services (leave empty for local dev)
AZURE_COMMUNICATION_CONNECTION_STRING=""
AZURE_COMMUNICATION_FROM_EMAIL=""

# Test Users (for local development)
TEST_USERS=test1@example.com,test2@example.com,test3@example.com
TEST_ORG=gmail.com

# Docker Network Configuration
DOCKER_NETWORK=satori-app-network